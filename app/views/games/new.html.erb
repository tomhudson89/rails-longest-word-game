<h1>🔎 Longest Word Game 🔎</h1>
<% @letters.each do |letter| %>
  <span class="this"><%= letter %></span>
<% end %>
<br>
<br>
<br>
<form class="that" action="score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="hidden" name="grid" value="<%= @letters %>">
  <input type="text" name="word" placeholder="type here">
  <input type="submit">
</form>
